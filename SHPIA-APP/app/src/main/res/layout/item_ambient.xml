<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ambientCardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="85dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.google.android.material.chip.Chip
            android:id="@+id/ambientListCardSensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChipText"
            app:chipBackgroundColor="@color/purple_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:id="@+id/ambientListCardLinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:padding="5dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ambientListCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title" />

        <TextView
            android:id="@+id/ambientListCardLevels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text" />

        <TextView
            android:id="@+id/ambientListCardShared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text" />

    </LinearLayout>


</LinearLayout>